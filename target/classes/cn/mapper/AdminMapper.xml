<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.AdminMapper">
    <select id="findAll" resultType="products">
        select * from products
    </select>

    <select id="findProductByManyCondition" resultType="products">
        select * from products
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <if test="category != null">
                AND category = #{category}
            </if>
            <if test="minprice != null">
                AND price >= #{minprice}
            </if>
            <if test="maxprice != null">
                AND price &lt;= #{maxprice}
            </if>
        </where>
    </select>

    <insert id="addProduct" parameterType="products">
        inset into products (name,price,category,pnum,imgurl,description) values (#{name},#{price},#{category},#{pnum},#{imgurl},#{description})
    </insert>
</mapper>